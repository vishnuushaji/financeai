{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./api-dist",
    "target": "es2022",
    "module": "esnext",
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": false,
    "declaration": false,
    "sourceMap": false,
    "removeComments": true
  },
  "include": ["api/**/*", "server/**/*", "shared/**/*"],
  "exclude": ["client/**/*", "node_modules", "dist"]
}